use strict;
use warnings;
use utf8;

binmode(STDOUT, ":utf8");

my $acpi;
my $status;
my $percent;
my $full_text;

# read the first line of the "acpi" command output
open (ACPI, "acpi -b | grep -v 'unavailable' |") or die;
$acpi = <ACPI>;
close(ACPI);

# fail on unexpected output
if ($acpi !~ /: (\w+), (\d+)%/) {
	die "$acpi";
}

$status     = $1;
$percent    = $2;
$full_text  = "$percent%";

if ($acpi =~ /(\d\d:\d\d):/) {
	$full_text .= " ($1)";
}

# print text
# assuming Nerd Fonts are installed

if ($status eq 'Charging') {
	if ($percent < 5) {
		print "$full_text \x{f58d}";
		exit(33);
	} elsif ($percent < 20) {
		print "$full_text \x{f585}";
	} elsif ($percent < 30) {
		print "$full_text \x{f586}";
	} elsif ($percent < 40) {
		print "$full_text \x{f587}";
	} elsif ($percent < 60) {
		print "$full_text \x{f588}";
	} elsif ($percent < 80) {
		print "$full_text \x{f589}";
	} elsif ($percent < 90) {
		print "$full_text \x{f58a}";
	} elsif ($percent < 100){
		print "$full_text \x{f578}";
	}
} else {
	if ($percent < 5) {
		print "$full_text \x{f58d}";
		exit(33);
	} elsif ($percent < 10) {
		print "$full_text \x{f579}";
	} elsif ($percent < 20) {
		print "$full_text \x{f57a}";
	} elsif ($percent < 30) {
		print "$full_text \x{f57b}";
	} elsif ($percent < 40) {
		print "$full_text \x{f57c}";
	} elsif ($percent < 50) {
		print "$full_text \x{f57d}";
	} elsif ($percent < 60) {
		print "$full_text \x{f57e}";
	} elsif ($percent < 70) {
		print "$full_text \x{f57f}";
	} elsif ($percent < 80) {
		print "$full_text \x{f580}";
	} elsif ($percent < 90) {
		print "$full_text \x{f581}";
	} elsif ($percent < 100){
		print "$full_text \x{f578}";
	} else {
		if ($status eq 'Discharging') {
			print "$full_text \x{f578}";
		} else {
			print "$full_text \x{f583}";
		}
	}

}

exit(0);
