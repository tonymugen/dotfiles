auto-reload yes
cleanup-on-quit yes

bind-key j   down
bind-key k   up
bind-key TAB next-unread

macro p delete-all-articles ; purge-deleted ; quit
macro v set browser "vlc" ; open-in-browser ; set browser "firefox"

color info              magenta   black
color listnormal        blue      default
color listnormal_unread yellow    default
color listfocus         cyan      black
color listfocus_unread  default   black

highlight article "^Feed: .+"   red
highlight article "^Title: .+"  cyan
highlight article "^Author: .+" blue
highlight article "^Date: .+"   green
highlight article "^Link: .+"   yellow
highlight feedlist "-+.+-+$"    green

